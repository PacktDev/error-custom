{
  "name": "@packt/error-custom",
  "version": "0.2.0",
  "description": "Extends the JavaScript Error object with custom properties.",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:packt-internal/error-custom.git"
  },
  "main": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "test": "npm run lint && npm run build && npm run unit",
    "lint": "eslint ./src/**/*.*s ./tests/**/*.*s",
    "lint:fix": "eslint ./src/**/*.*s ./tests/**/*.*s --fix",
    "coverage": "babel-node ./node_modules/babel-istanbul/lib/cli.js check-coverage --statements 95 --functions 95 --branches 95 --lines 95",
    "compile": "babel src --out-dir .compiled --source-maps --watch",
    "unit": "nyc --require ts-node/register --require source-map-support/register mocha --recursive 'tests/**/*.spec.*s'",
    "build": "tsc",
    "prepublishOnly": "npm run test && npm run build"
  },
  "engines": {
    "node": ">=8.10"
  },
  "author": {
    "name": "Packt Publishing Ltd",
    "url": "https://www.packtpub.com/"
  },
  "contributors": [
    {
      "name": "Marius Lazar",
      "email": "mariuslazar93@gmail.com"
    },
    {
      "name": "Mike Elsmore",
      "email": "mike@buitlbymy.tech"
    },
    {
      "name": "Chris Key",
      "email": "chrisk@packt.com"
    }
  ],
  "license": "Apache-2.0",
  "homepage": "https://bitbucket.org/packt-internal/error-custom#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@types/chai": "^4.1.7",
    "@types/debug": "^4.1.4",
    "@types/joi": "^14.3.3",
    "@types/mocha": "^5.2.5",
    "@types/nock": "^9.3.1",
    "@types/sinon": "^7.0.13",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-cli": "^6.26.0",
    "babel-istanbul": "^0.12.2",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.2",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "debug": "4.1.1",
    "joi": "14.3.1",
    "uuid": "3.3.2"
  },
  "nyc": {
    "check-coverage": false,
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "all": true
  }
}
